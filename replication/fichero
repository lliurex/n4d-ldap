cat <<EOF | ldapmodify -Y EXTERNAL -H ldapi:///
dn: cn=config
changetype: modify
replace: olcLogLevel
olcLogLevel: 16384
EOF


cat <<EOF | ldapmodify -Y EXTERNAL -H ldapi:///
dn: olcDatabase={1}hdb,cn=config
changetype: modify
replace: olcRootDN
olcRootDN: cn=admin,dc=lliurex
EOF

cat <<EOF | ldapmodify -Y EXTERNAL -H ldapi:///
dn: olcDatabase={1}hdb,cn=config
changetype: modify
delete: olcRootDN
-
add: olcRootDN
olcRootDN: cn=admin,dc=lliurex,dc=net
EOF


cat <<EOF | ldapmodify -Y EXTERNAL -H ldapi:///
dn: cn=config
changetype: modify
delete: olcLogLevel
EOF

cat <<EOF | ldapmodify -Y EXTERNAL -H ldapi:///
dn: cn=config
changetype: modify
replace: olcLogLevel
olcLogLevel: 12354 
EOF


ldapsearch -Y EXTERNAL -H ldapi:// -b cn=config | less

ldapsearch -x -LLL -H ldapi:// -s base -b 'cn=config' contextCSN
